{
  "arrowParens": "always",
  "bracketSpacing": true,
  "insertPragma": false,
  "keywordCase": "upper",
  "language": "mysql",
  "overrides": [
    {
      "files": [".mailmap"],
      "options": {
        "parser": "sh"
      }
    },
    {
      "files": [".env.TEMPLATE"],
      "options": {
        "parser": "sh"
      }
    },
    {
      "files": ["scripts/**/*.sh"],
      "options": {
        "parser": "sh"
      }
    }
  ],
  "plugins": ["prettier-plugin-sh", "prettier-plugin-sort-json", "prettier-plugin-sql"],
  "printWidth": 90,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
