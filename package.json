{
  "name": "@nova/nova-db",
  "description": "nova db",
  "version": "0.8.0",
  "private": true,
  "homepage": "https://nova.eco",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nova.git"
  },
  "keywords": [
    "@nova",
    "db",
    "mariadb",
    "sql"
  ],
  "author": "nova admin <admin@nova.eco>",
  "engines": {
    "node": ">=22.11.1",
    "npm": ">=10.9.4"
  },
  "scripts": {
    "build": "pnpm build:only",
    "build:only": "pnpm build:certs",
    "build:bashunit": "./scripts/bashunit_load.sh",
    "changelog": "npx auto-changelog",
    "check": "npm run format && npm run lint && npm run spell",
    "docker": "npm run docker:only",
    "docker:has": "bash -c 'command -v docker'",
    "docker:only": "npm run docker:start",
    "docker:start": "docker compose up --build --force-recreate",
    "docker:stop": "docker compose down --remove-orphans --rmi all",
    "env:cp": "bash -c 'cp --update=none ./.env.TEMPLATE ./.env'",
    "format": "npm run format:only",
    "format:base": "prettier .",
    "format:check": "npm run format:base --check",
    "format:fix": "npm run format:base --write",
    "format:only": "npm run format:check",
    "lint": "npm run lint:only",
    "lint:docker": "npm run docker:has && npm run lint:docker:dockerfile && npm run lint:docker:compose",
    "lint:docker:dockerfile": "docker build --check .",
    "lint:docker:compose": "docker compose config",
    "lint:only": "npm run lint:docker",
    "postinstall": "npm run env:cp",
    "predocker": "npm run docker:has",
    "spell": "npm run spell:only",
    "spell:only": "npx cspell .",
    "start": "npm run check && npm run docker",
    "stop": "npm run docker:stop"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "auto-changelog": "^2.5.0",
    "cspell": "^9.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.17.4",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-sql": "^0.19.2",
    "sql-lint": "^1.0.0"
  }
}
